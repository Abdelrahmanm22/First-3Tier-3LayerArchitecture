@model IEnumerable<UserViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>All Users</h1>
<br />
<div class="m-2">
	<form class="row offset-2" asp-action="Index">
		<div class="col-8">
			<input class="form-control" placeholder="User's Name" type="text" name="SearchValue" />
		</div>
		<div class="col-4">
			<input type="submit" class="btn btn-info" value="Serch" />
		</div>
	</form>
</div>
@if (Model.Count() > 0)
{
	<table class="table table-striped table-hover mt-5">
		<thead>
			<tr>
				<td>@Html.DisplayNameFor(u => u.Id)</td>
				<td>@Html.DisplayNameFor(u => u.FName)</td>
				<td>@Html.DisplayNameFor(u => u.LName)</td>
				<td>@Html.DisplayNameFor(u => u.Email)</td>
				<td>@Html.DisplayNameFor(u => u.PhoneNumber)</td>
				<td>@Html.DisplayNameFor(u => u.Roles)</td>
				<td>Details</td>
				<td>Update</td>
				<td>Delete</td>
			</tr>
		</thead>
		<tbody>
			@foreach (var User in Model)
			{
				<tr>
					<td>@User.Id</td>
					<td>@User.FName</td>
					<td>@User.LName</td>
					<td>@User.Email</td>
					<td>@User.PhoneNumber</td>
					<td>@string.Join(",", User.Roles)</td>
					<partial name="_ButtonsPartialView" model="@User.Id" />
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div>
		<h1>There is no Users</h1>
	</div>
}
