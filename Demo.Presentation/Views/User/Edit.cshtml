@model UserViewModel
@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Edit @Model.FName @Model.LName User</h1>
<br />
<div asp-validation-summary="All">
</div>

<form asp-action="Edit" method="post" >
	<div class="form-group">
		<label class="col-form-label" asp-for="FName"></label>
		<input class="form-control" asp-for="FName" />
		<span class="text-danger" asp-validation-for="FName"></span>
	</div>
	<div class="form-group">
		<label class="col-form-label" asp-for="LName"></label>
		<input class="form-control" asp-for="LName" />
		<span class="text-danger" asp-validation-for="LName"></span>
	</div>

	<div class="form-group">
		<label class="col-form-label" asp-for="PhoneNumber"></label>
		<input class="form-control" asp-for="PhoneNumber" />
		<span class="text-danger" asp-validation-for="PhoneNumber"></span>
	</div>
	<input type="submit" value="Save" class="btn btn-primary" /> |
	<a asp-action="Index" class="btn btn-light">Back To List</a>
</form>
@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}