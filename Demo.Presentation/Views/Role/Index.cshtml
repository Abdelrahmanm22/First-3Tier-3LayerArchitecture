@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="Create" class="btn btn-success">Create New Role</a>
<br />
<h1>All Roles</h1>
<br />
<div class="m-2">
	<form class="row offset-2" asp-action="Index">
		<div class="col-8">
			<input class="form-control" placeholder="Role's Name" type="text" name="SearchValue" />
		</div>
		<div class="col-4">
			<input type="submit" class="btn btn-info" value="Serch" />
		</div>
	</form>
</div>
@if (Model.Count() > 0)
{
	<table class="table table-striped table-hover mt-5">
		<thead>
			<tr>
				<td>@Html.DisplayNameFor(u => u.Id)</td>
				<td>@Html.DisplayNameFor(u => u.RoleName)</td>
				<td>Details</td>
				<td>Update</td>
				<td>Delete</td>
			</tr>
		</thead>
		<tbody>
			@foreach (var Role in Model)
			{
				<tr>
					<td>@Role.Id</td>
					<td>@Role.RoleName</td>
					<partial name="_ButtonsPartialView" model="@Role.Id"/>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div>
		<h1>There is no Roles</h1>
	</div>
}