@model RoleViewModel
@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Edit @Model.RoleName Role</h1>
<br />
<div asp-validation-summary="All">
</div>

<form asp-action="Edit" method="post" >
	<div class="form-group">
		<label class="col-form-label" asp-for="RoleName"></label>
		<input class="form-control" asp-for="RoleName" />
		<span class="text-danger" asp-validation-for="RoleName"></span>
	</div>
	<input type="submit" value="Save" class="btn btn-primary" /> |
	<a asp-action="Index" class="btn btn-light">Back To List</a>
</form>
@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}