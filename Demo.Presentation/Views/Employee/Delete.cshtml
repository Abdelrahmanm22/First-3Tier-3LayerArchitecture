@model Employee
@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you want to delete @Model.Name Employee</h1>
<br />
<div asp-validation-summary="All">
</div>
<form asp-action="Delete" method="post">
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input readonly class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input readonly class="form-control" asp-for="Age" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input readonly class="form-control" asp-for="Salary" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input readonly class="form-control" asp-for="Address" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input readonly class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input readonly class="form-control" asp-for="PhoneNumber" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="HireDate"></label>
        <input readonly class="form-control" asp-for="HireDate" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="IsActive"></label>
        <input readonly class="form-control" asp-for="IsActive" />
    </div>
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-light">Cancle</a>
</form>